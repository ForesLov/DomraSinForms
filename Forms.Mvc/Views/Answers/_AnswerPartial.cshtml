@using DomraSinForms.Domain.Models.Answers;
@using DomraSinForms.Domain.Models.Questions;
@using Forms.Mvc.Models.Answers;
@using Forms.Mvc.Models.Answers.AnswersModels;
@using Forms.Mvc.Services;
@model IAnswerViewModel
@{
    var radioName = $"radioGroup{Model.Index}";
}

@switch (Model)
{
    case (CheckAnswer checkAnswer):
        {
            @await Html.PartialAsync("/Views/Answers/AnswerTypes/_CheckAnswerPartial.cshtml", checkAnswer);
        }
        break;
    case (RadioAnswer radioAnswer):
        {
            @await Html.PartialAsync("/Views/Answers/AnswerTypes/_RadioAnswerPartial.cshtml", radioAnswer);
        }
        break;
    case (StringAnswer stringAnswer):
        {
            @await Html.PartialAsync("/Views/Answers/AnswerTypes/_StringAnswerPartial.cshtml", stringAnswer);
        }
        break;
    case (DecimalAnswer decimalAnswer):
        {
            @await Html.PartialAsync("/Views/Answers/AnswerTypes/_DecimalAnswerPartial.cshtml", decimalAnswer);
        }
        break;

}


