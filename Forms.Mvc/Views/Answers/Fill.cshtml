@using DomraSinForms.Domen.Models;
@model FillFormViewModel
@{
    ViewData["Title"] = Model.FormTitle;
    int i = 0;
}
<div class="row justify-content-center">
<div class="col-md-6 ">
<form asp-action="Fill" method="post">
    <h1><label asp-for="FormTitle"></label></h1>
    <h5><label  asp-for="FormDescription"></label></h5>
    <input asp-for="FormId" hidden/>
        @foreach (var answer in Model.Answers)
        {
            <div class="form-group mb-3">
                <div class="d-block border rounded-3 p-3">
                    <div class="row">
                        <label class="text">@answer.Question.Text
                        @if(answer.Question.IsRequired)
                        {
                            <label class="text-danger">*</label>
                    
                        }</label>
                    </div>
                    <div class="row">
                    
                            <input asp-for="Answers[i].Value" class="form-control" type="text"/>
                            <input asp-for="Answers[i].QuestionText" class="form-control" hidden/>
                            <input asp-for="Answers[i].Question.Id" class="form-control" hidden/>
                            <input asp-for="Answers[i].Question.Text" class="form-control" hidden/>
                            <input asp-for="Answers[i].Question.IsRequired" class="form-control" hidden/>
                    
                    </div>
                </div>
            </div>
            i++;
        }
    <div class="form-group">
        <input type="submit" class="btn btn-primary"/>
    </div>
</form>

    


<div>
    <a asp-action="Index">Back to List</a>
</div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

