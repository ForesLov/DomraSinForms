@using Microsoft.AspNetCore.Identity;
@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer Localizer
@model DomraSinForms.Application.Forms.Commands.Create.CreateFormCommand

@{
    ViewData["Title"] = @Localizer["New form"]?.Value;
}

<h1>@Localizer["New form"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <input asp-for="CreatorId" class="form-control"  hidden/>
            <div class="form-group mb-2">
                <input asp-for="Title" class="form-control form-control-lg" placeholder="@Localizer["Title"]" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <input asp-for="Description" class="form-control" placeholder="@Localizer["Description"]" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <input type="submit" value="@Localizer["Create"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Localizer["Back to list"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
