@using Microsoft.AspNetCore.Identity;
@model DomraSinForms.Application.Forms.Commands.Create.CreateFormCommand

@{
    ViewData["Title"] = "Новая форма";
}

<h1>Новая форма</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <input asp-for="CreatorId" class="form-control"  hidden/>
            <div class="form-group mb-2">
                <input asp-for="Title" class="form-control form-control-lg" placeholder="Заголовок формы"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <input asp-for="Description" class="form-control" placeholder="Описание"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
