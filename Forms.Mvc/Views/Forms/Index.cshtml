@using DomraSinForms.Application.Forms.Queries.GetList;
@model IEnumerable<FormDto>

@{
    ViewData["Title"] = "Все формы";
}

<h1>Все формы</h1>

<p>
    <a asp-action="Create">Создать форму</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Название
            <th>
                Описание
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.CreatorId)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.CreatorId)
            </td>*@
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Подробнее</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
