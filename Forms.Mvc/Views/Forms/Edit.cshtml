@using Forms.Mvc.Services;
@model DomraSinForms.Domen.Models.Form
@{
    ViewData["Title"] = "Редактирование";
}

<h1>Редактирование</h1>
<div class="row">

<div class="row col-md-8 border rounded p-3">
    <h4>Форма</h4>
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="CreatorId" class="form-control" hidden/>
            <div class="form-group">
                <label asp-for="Title" class="control-label">Название</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Описание</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />

         

            <div class="form-group">
                <label class="control-label"></label>
                <input type="submit" value="Сохранить" class="form-control btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div class="row col-md-8 border rounded p-3">
    <h4>Вопросы</h4>
    @foreach (var question in Model.Questions)
    {
        
        <div class="col-md-4">
            <div class="card m-1">
                <div class="card-body">
                    question.Text
                </div>
                <div class="card-footer">
                    <form class="d-inline col-6" asp-action="EditQuestion" asp-route-formid="@Model.Id" asp-route-id="question.Id" method="get">
                        <input type="submit" class="btn btn-secondary" value="Edit" />
                    </form>
                    <form class="d-inline col-6" asp-action="DeleteQuestion" asp-route-formid="@Model.Id" asp-route-id="question.Id" method="post">
                        <input type="submit" class="btn btn-danger" value="Delete" />
                    </form>
                </div>
            </div>
        </div>
    }
    <form asp-action="CreateQuestion" asp-route-id="@Model.Id" method="get">
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Добавить вопрос" />
        </div>
    </form>
</div>
        

    


<div>
    <a asp-action="Index">Назад к списку</a>
</div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
