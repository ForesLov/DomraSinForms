@using Forms.Mvc.Services;
@model DomraSinForms.Domen.Models.Form
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Form</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="CreatorId" class="form-control" hidden/>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                
            </div>
            <button onclick="AddBLock" class="btn btn-outline-info">
                Add new
            </button>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        @foreach (var block in Model.Blocks)
        {
            <div class="d-block">
                <div class="btn-group" role="group">
                    <div class="btn btn-primary">Edit</div>
                    <div class="btn btn-danger">Delete</div>
                </div>
            </div>
            
        }
        <form asp-action="AddBlock" asp-route-id="@Model.Id" method="post">
            <input type="submit" class="btn" value="Add block"/>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
