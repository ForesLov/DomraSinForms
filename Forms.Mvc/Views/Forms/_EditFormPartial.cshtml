@using DomraSinForms.Application.Forms.Commands.Update;
@using Microsoft.AspNetCore.Mvc.Localization;
@model UpdateFormCommand
@inject IViewLocalizer Localizer
<form id="autosaveForm" asp-action="Edit" method="post" data-dsf-form>

    <input type="hidden" asp-for="Id" />
    <input asp-for="UserId" type="hidden"/>

    <div class="form-group mb-2">
        <input asp-for="Title" class="form-control form-control-lg" placeholder="@Localizer["Form title"]" data-dsf-formInput id="forminput1" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <input asp-for="Description" class="form-control" placeholder='@Localizer["Form description"]' data-dsf-formInput id="forminput2" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-check mb-2">
        <input asp-for="AllowAnonymous" class="form-check-input" type="checkbox" data-dsf-formInput id="forminput3"/>
        <label class="form-check-label">@Localizer["Allow anonymous"]</label>
    </div>
</form>
